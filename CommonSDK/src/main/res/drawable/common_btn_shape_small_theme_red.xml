<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
        <solid android:color="@color/base_theme_color_dark" />

        <corners android:radius="36dip" />

        <stroke android:width="1dip" android:color="@color/base_theme_color_dark" />
    </shape></item>
    <item android:state_pressed="false"><shape>
        <solid android:color="@color/base_theme_color" />

        <corners android:radius="36dip" />

        <stroke android:width="1dip" android:color="@color/base_theme_color" />
    </shape></item>

</selector>